
<% if (site.categories.length){ %>
   <div class="widget">
      <h3 class="title"><%= __('categories') %></h3>
      <ul class="nav sidebar-categories">
         <% site.categories.forEach(function(cat){ %>
            <li>
               <a href="<%= url_for(cat.path) %>"><%= cat.name %>
                  (<%= cat.length  %>)</a>
            </li>
         <% }); %>
      </ul>
   </div>
<% } %>
