<% if (site.tags.length){ %>
<div class="blog-tags">
  <div class="widget-wrap">
    <div class="widget">
        <h3 class="title"></i> <%= __('tags') %></h3>
      <% function addIcon(name){ return "<i class='fa fa-tags'></i>" + name } %>
      <%- list_tags({ transform: addIcon, show_count: false }) %>
    </div>
  </div>
</div>
<% } %>
